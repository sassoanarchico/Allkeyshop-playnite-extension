<UserControl x:Class="AllKeyShopExtension.Views.AllKeyShopSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Foreground="{DynamicResource TextBrush}">
    <UserControl.Resources>
        <Style x:Key="IconBtn" TargetType="Button">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="24"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ToolbarBtn" TargetType="Button">
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Padding="16,14,16,10"
                Background="#0A808080"
                BorderBrush="#18808080" BorderThickness="0,0,0,1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xEF40;" FontFamily="Segoe MDL2 Assets"
                               FontSize="22" VerticalAlignment="Center"
                               Margin="0,0,10,0" Opacity="0.75"/>
                    <TextBlock Text="AllKeyShop Price Monitor" 
                               FontSize="20" FontWeight="Bold"/>
                </StackPanel>
                <TextBlock Text="Monitor your game prices and discover free games" 
                           FontSize="11.5" Opacity="0.5" Margin="32,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- TOOLBAR -->
        <Border Grid.Row="1" Padding="16,8" Background="#06808080">
            <DockPanel>
                <TextBlock x:Name="StatusText" DockPanel.Dock="Right"
                           VerticalAlignment="Center" Opacity="0.55" FontSize="11.5"
                           TextTrimming="CharacterEllipsis" MaxWidth="260"
                           Margin="12,0,0,0"/>
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource ToolbarBtn}" 
                            Click="AddGameButton_Click" 
                            ToolTip="Add a game to monitor">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
                                       FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Add" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ToolbarBtn}" 
                            Click="RefreshButton_Click" 
                            ToolTip="Refresh all prices">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" 
                                       FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ToolbarBtn}" 
                            Click="ShowFreeGamesButton_Click" 
                            ToolTip="Check free games">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8E6;" FontFamily="Segoe MDL2 Assets" 
                                       FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Free" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- GAME LIST -->
        <Grid Grid.Row="2">
            <ScrollViewer x:Name="GamesScrollViewer"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="0">
                <ItemsControl x:Name="GamesItemsControl" Margin="12,8,12,4">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#0C808080" CornerRadius="6"
                                    Padding="12,10" Margin="0,0,0,6"
                                    BorderBrush="#12808080" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Game Thumbnail -->
                                    <Border Grid.Column="0" Width="64" Height="36"
                                            CornerRadius="4" ClipToBounds="True"
                                            Background="#15808080" VerticalAlignment="Center">
                                        <Grid>
                                            <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets"
                                                       FontSize="16" Opacity="0.25"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Image Source="{Binding ImageUrl}" 
                                                   Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Grid>
                                    </Border>

                                    <!-- Game Info -->
                                    <StackPanel Grid.Column="1" Margin="12,0,12,0" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding GameName}" 
                                                   FontSize="13.5" FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Key: " FontSize="11" Opacity="0.5"/>
                                            <TextBlock Text="{Binding KeyPriceDisplay}" FontSize="11" Opacity="0.85"/>
                                            <TextBlock Text="  &#x00B7;  " FontSize="11" Opacity="0.3"/>
                                            <TextBlock Text="Account: " FontSize="11" Opacity="0.5"/>
                                            <TextBlock Text="{Binding AccountPriceDisplay}" FontSize="11" Opacity="0.85"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <TextBlock FontSize="10" Opacity="0.4">
                                                <TextBlock.Text>
                                                    <Binding Path="ThresholdDisplay" StringFormat="Threshold: {0}"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock Text="  &#x00B7;  " FontSize="10" Opacity="0.25"/>
                                            <TextBlock FontSize="10" Opacity="0.4">
                                                <TextBlock.Text>
                                                    <Binding Path="LastUpdate" StringFormat="Upd: {0:dd/MM/yy HH:mm}"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Price + Actions -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding BestPriceDisplay}" 
                                                   FontSize="18" FontWeight="Bold"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,0,6"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Style="{StaticResource IconBtn}" 
                                                    ToolTip="Open AllKeyShop page"
                                                    Click="OpenUrlButton_Click" Tag="{Binding}">
                                                <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconBtn}" 
                                                    ToolTip="Go to best offer"
                                                    Click="BuyButton_Click" Tag="{Binding}">
                                                <TextBlock Text="&#xE7BF;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconBtn}" 
                                                    ToolTip="Refresh price"
                                                    Click="UpdateSingleButton_Click" Tag="{Binding}">
                                                <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconBtn}" 
                                                    ToolTip="Edit price threshold"
                                                    Click="EditThresholdButton_Click" Tag="{Binding}">
                                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                            </Button>
                                            <Button Style="{StaticResource IconBtn}" 
                                                    ToolTip="Remove from watchlist"
                                                    Click="RemoveButton_Click" Tag="{Binding Id}">
                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                                           FontSize="12" Foreground="#FF6B68"/>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyStatePanel"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="&#xE7FC;" FontFamily="Segoe MDL2 Assets"
                           FontSize="48" Opacity="0.15"
                           HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="No games monitored" 
                           FontSize="16" Opacity="0.45"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Click 'Add' to start monitoring prices" 
                           FontSize="12" Opacity="0.3"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap" MaxWidth="300"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" 
                    Background="#CC000000"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets"
                               FontSize="28" Foreground="White" Opacity="0.7"
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock Text="Loading..." 
                               FontSize="14" Foreground="White"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="3"
                                 Background="#40FFFFFF" Foreground="#AAFFFFFF"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FREE GAMES SECTION -->
        <Expander x:Name="FreeGamesExpander" Grid.Row="3"
                  Margin="12,4,12,4"
                  Foreground="{DynamicResource TextBrush}"
                  IsExpanded="False">
            <Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE8E6;" FontFamily="Segoe MDL2 Assets" 
                               FontSize="13" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.6"/>
                    <TextBlock Text="Recent Free Games" FontSize="13" FontWeight="SemiBold"/>
                    <TextBlock x:Name="FreeGamesCountText" FontSize="11" Opacity="0.4"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Expander.Header>
            <Grid MaxHeight="220">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="FreeGamesItemsControl" Margin="4,4,4,4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#08808080" CornerRadius="4" 
                                        Padding="10,6" Margin="0,0,0,3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding GameName}" 
                                                   FontSize="12" TextTrimming="CharacterEllipsis"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Platform}" 
                                                   FontSize="10.5" Opacity="0.5"
                                                   VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                                   FontSize="10.5" Opacity="0.4" Margin="0,0,8,0">
                                            <TextBlock.Text>
                                                <Binding Path="DateFound" StringFormat="{}{0:dd/MM}"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Button Grid.Column="3" Style="{StaticResource IconBtn}"
                                                ToolTip="Open" Click="OpenFreeGameUrl_Click" Tag="{Binding}">
                                            <TextBlock Text="&#xE8A7;" FontFamily="Segoe MDL2 Assets" FontSize="11"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TextBlock x:Name="NoFreeGamesText"
                           Text="No free games found recently"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Opacity="0.35" FontSize="12"
                           Visibility="Collapsed"/>
            </Grid>
        </Expander>

        <!-- STATUS BAR -->
        <Border Grid.Row="4" Padding="16,6" Opacity="0.5"
                BorderBrush="#15808080" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="GameCountText" Text="0 games monitored" FontSize="11"/>
                <TextBlock Text="  &#x00B7;  " FontSize="11" Opacity="0.5"/>
                <TextBlock x:Name="LastUpdateText" Text="Last update: never" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>