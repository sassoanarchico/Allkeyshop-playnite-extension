<Window x:Class="AllKeyShopExtension.Views.SearchGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AllKeyShopExtension.Views"
        Title="Search Game on AllKeyShop"
        Width="650" Height="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource PopupBackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Search for a game on AllKeyShop" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="SearchTextBox" 
                         Grid.Column="0"
                         Padding="8,6"
                         FontSize="14"
                         KeyDown="SearchTextBox_KeyDown"/>
                <Button x:Name="SearchButton" 
                        Grid.Column="1" 
                        Content="Search" 
                        Padding="14,6" 
                        Margin="8,0,0,0"
                        Click="SearchButton_Click"/>
            </Grid>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="StatusText" Grid.Row="1" 
                   Opacity="0.6" Margin="0,0,0,5"
                   Text="Enter the game name and press Search"/>

        <!-- Results List -->
        <ListBox x:Name="ResultsListBox" 
                 Grid.Row="2" 
                 Margin="0,5,0,10"
                 SelectionMode="Single"
                 SelectionChanged="ResultsListBox_SelectionChanged"
                 MouseDoubleClick="ResultsListBox_MouseDoubleClick"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Background="{DynamicResource ControlBackgroundBrush}"
                 Foreground="{DynamicResource TextBrush}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="2"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#18808080"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#28808080"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Game Image -->
                        <Border Grid.Column="0" Width="60" Height="34" 
                                Margin="0,0,10,0" CornerRadius="3"
                                Background="{DynamicResource WindowBackgroundBrush}">
                            <Image Source="{Binding ImageUrl}" 
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                        
                        <!-- Game Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}" 
                                       FontSize="13" FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding DisplayText}" 
                                       FontSize="11" Opacity="0.6"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <!-- Price -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center" 
                                    HorizontalAlignment="Right" Margin="10,0,0,0">
                            <TextBlock Text="{Binding Price, StringFormat=€{0:F2}}" 
                                       FontSize="14" FontWeight="Bold"
                                       HorizontalAlignment="Right"
                                       Visibility="{Binding InStock, Converter={StaticResource BoolToVis}}"/>
                            <TextBlock Text="Not available" 
                                       FontSize="11" Opacity="0.5"
                                       HorizontalAlignment="Right"
                                       Visibility="{Binding InStock, Converter={StaticResource InverseBoolToVis}}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                       Text="Price threshold (€):" 
                       VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="ThresholdTextBox" 
                     Grid.Column="1" 
                     Width="80" HorizontalAlignment="Left"
                     Padding="6,4"/>
            
            <Button x:Name="ConfirmButton" 
                    Grid.Column="3" 
                    Content="Add" 
                    Padding="20,8" Margin="0,0,8,0"
                    IsEnabled="False"
                    Click="ConfirmButton_Click"/>
            <Button x:Name="CancelButton" 
                    Grid.Column="4" 
                    Content="Cancel" 
                    Padding="20,8"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </Grid>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Grid.Row="2"
                Background="#CC000000"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Searching..." 
                          FontSize="14"
                          Foreground="White"
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
