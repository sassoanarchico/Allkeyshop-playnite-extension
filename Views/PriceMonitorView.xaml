<UserControl x:Class="AllKeyShopExtension.Views.PriceMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="10" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="AllKeyShop Price Monitor" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"/>
                <Button Content="Add Game" 
                       Margin="10,0,0,0" 
                       Click="AddGameButton_Click"
                       Padding="10,5"/>
                <Button Content="Refresh" 
                       Margin="5,0,0,0" 
                       Click="RefreshButton_Click"
                       Padding="10,5"/>
                <TextBlock x:Name="StatusText" 
                          Margin="10,0,0,0" 
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Games List -->
        <DataGrid x:Name="GamesDataGrid" 
                 Grid.Row="1" 
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 MouseDoubleClick="GamesDataGrid_MouseDoubleClick"
                 GridLinesVisibility="All"
                 HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Game" 
                                  Binding="{Binding GameName}" 
                                  Width="*"/>
                <DataGridTextColumn Header="Price" 
                                  Binding="{Binding LastPrice, StringFormat={}{0:C}}" 
                                  Width="120"/>
                <DataGridTextColumn Header="Seller" 
                                  Binding="{Binding LastSeller}" 
                                  Width="150"/>
                <DataGridTextColumn Header="Last Update" 
                                  Binding="{Binding LastUpdate, StringFormat={}{0:g}}" 
                                  Width="180"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Remove" 
                                   Click="RemoveButton_Click"
                                   Tag="{Binding Id}"
                                   Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Loading Indicator -->
        <Border x:Name="LoadingOverlay" 
               Grid.Row="1" 
               Opacity="0.8"
               Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="Loading..." 
                          FontSize="14"
                          Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" 
                            Width="200" 
                            Height="20"/>
            </StackPanel>
        </Border>

        <!-- Empty State -->
        <StackPanel x:Name="EmptyStatePanel" 
                   Grid.Row="1" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Visibility="Collapsed">
            <TextBlock Text="No games monitored" 
                      FontSize="14" 
                      Opacity="0.6"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>
            <TextBlock Text="Click 'Add Game' to start monitoring prices" 
                      FontSize="12" 
                      Opacity="0.5"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
