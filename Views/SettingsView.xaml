<UserControl x:Class="AllKeyShopExtension.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Foreground="{DynamicResource TextBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="AllKeyShop Extension Settings" 
                      FontSize="18" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <!-- Notifications Section -->
            <GroupBox Header="Notifications" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <CheckBox x:Name="NotificationsEnabledCheckBox" 
                             Content="Enable notifications" 
                             Margin="0,5"
                             Checked="NotificationsEnabledCheckBox_Changed"
                             Unchecked="NotificationsEnabledCheckBox_Changed"/>
                    <CheckBox x:Name="PriceAlertsEnabledCheckBox" 
                             Content="Enable price threshold alerts" 
                             Margin="0,5"
                             Checked="PriceAlertsEnabledCheckBox_Changed"
                             Unchecked="PriceAlertsEnabledCheckBox_Changed"/>
                </StackPanel>
            </GroupBox>

            <!-- Update Intervals Section -->
            <GroupBox Header="Update Intervals" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Price update interval (minutes):" 
                                  Width="250" 
                                  VerticalAlignment="Center"/>
                        <TextBox x:Name="PriceUpdateIntervalTextBox" 
                                Width="100" 
                                TextChanged="PriceUpdateIntervalTextBox_TextChanged"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Free games check interval (minutes):" 
                                  Width="250" 
                                  VerticalAlignment="Center"/>
                        <TextBox x:Name="FreeGamesCheckIntervalTextBox" 
                                Width="100" 
                                TextChanged="FreeGamesCheckIntervalTextBox_TextChanged"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Platforms Section -->
            <GroupBox Header="Platforms for Free Games Notifications" Margin="0,0,0,20">
                <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10" x:Name="PlatformsStackPanel">
                        <!-- Platforms will be added dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- Open Price Monitor Button -->
            <GroupBox Header="Price View" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Open the price monitoring window to view and manage monitored games." 
                              TextWrapping="Wrap" 
                              Margin="0,0,0,10"/>
                    <Button Content="Open Price Monitor" 
                           HorizontalAlignment="Left" 
                           Padding="20,5"
                           Click="OpenPriceMonitorButton_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Save Button -->
            <Button Content="Save Settings" 
                   HorizontalAlignment="Right" 
                   Padding="20,5"
                   Click="SaveButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
